<odoo>
    <template id="report_actuacion_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">

                        <h2 class="text-center">Informaci√≥n de los conciertos</h2>
                        <h4 class="text-center text-muted">
                            
                        </h4>
                        <br/>

                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <strong>Nombre de la banda o cantante:</strong>
                                    <span t-field="o.name"/>
                                </p>
                                <p>
                                    <strong>Descripcion:</strong>
                                    <span t-field="o.descripcion"/>
                                </p>
                            </div>
                        </div>

                        <br/>

                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Fecha de inicio</th>
                                    <th>Fecha de fin</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <span t-field="o.fecha_inicio"/>
                                    </td>
                                    <td>
                                        <span t-field="o.fecha_fin"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

